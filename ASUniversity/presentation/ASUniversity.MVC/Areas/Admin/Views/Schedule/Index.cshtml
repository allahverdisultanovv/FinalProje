@using ASUniversity.Application.DTOs.Schedule
@model IEnumerable<ScheduleItemDto>
@{
    int count = 0;
}
<section role="main" class="content-body card-margin">
    <header class="page-header">
        <h2> Schedule</h2>
    </header>

    <div class="row">

        <div class="col-lg-12">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    </div>

                </header>
                <div class="card-body">
                    <h3><a asp-action="create" class="btn btn-success">Create Group</a></h3>

                    <table class="table table-responsive-md table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <td>Group</td>
                                <th>Day of Week </th>
                                <th>Start Time</th>
                                <th>Subject</th>
                                <th>Teacher</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Group</td>
                                    <td>@item.DayOfWeek</td>
                                    <td>@item.StartTime</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Teacher </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-warning" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</section>
